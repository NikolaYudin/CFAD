@using Data
@inject ICompanyService companyService;

<div class="control col-12 row">
    <button>Add</button>
    <button>Del</button>
    <button>Edit</button>
</div>

<div class="col-12">
    @foreach (var company in CompanyList)
    {
        <div class="col-12 row">
            <div class="col-2">
                <NavLink href="@string.Format("/Company/CompanyDetails/{0}", @company.Id)">
                    @company.Id
                </NavLink>
            </div>
            <div class="col-2">@company.Name @company.Phone</div>
        </div>
    }
</div>
<hr />
<div class="col-12 row">@companyService.GetCreatedDate()</div>
<div class="col-12 row">version: @companyService.GetVersion()</div>


@code {
    public List<Company> CompanyList { get; set; }
    //public CompanyService companyService { get; set; }

    protected override void OnInitialized()
    {
        //companyService = new CompanyService();
        CompanyList = companyService.GetCompanies();
    }

}
